<h1>Listing episodes</h1>

<table>
  <tr>
    <th>Season</th>
    <th>Number</th>
    <th>Title</th>
    <th>Description</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @episodes.each do |episode| %>
  <tr>
    <td><%= episode.season_id %></td>
    <td><%= episode.number %></td>
    <td><%= episode.title %></td>
    <td><%= episode.description %></td>
    <td><%= episode.rating %></td>
    <td><%= link_to 'Show', episode %></td>
    <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
    <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

