= form_for @series do |f|
  - if @series.errors.any?
    #error_explanation
      %h2= "#{pluralize(@series.errors.count, "error")} prohibited this series from being saved:"
      %ul
        - @series.errors.full_messages.each do |msg|
          %li= msg
  
  = f.hidden_field :sid
  .field
    = f.label :title
    %br
    = f.text_field :title, :disabled => true
  / .field
  /   = f.label :description
  /   %br
  /   = f.text_area :description
  .field
    = f.label :category
    %br
    = f.select :category, options_from_collection_for_select([@series.category], "id", "name"), {}, {:disabled => true}
  / .field
  /   = f.label :rating
  /   %br
  /   = f.text_field :rating

  .actions
    = f.submit 'Save'
